<Page x:Class="Gym.Desktop.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gym.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InstructorsPage"
      Loaded="Page_Loaded">
    <Border Background="{DynamicResource SecondaryBackground}"
            Padding="10">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Search and Add-->
            <Grid Grid.Row="0"
                  Margin="0 5 0 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>

                <Border Background="{DynamicResource PrimaryTextBoxColor}"
                        Width="300"
                        Height="40"
                        Grid.Column="0"
                        HorizontalAlignment="Left">

                    <!--Search TextBox-->
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Path Grid.Column="0"
                              Fill="{DynamicResource PrimaryTextColor}"
                              Data="{DynamicResource search-icon}"
                              Width="20" Height="23"/>
                        <TextBox x:Name="tbSearch"
                                 Grid.Column="1"
                                 Padding="5"
                                 VerticalAlignment="Center"
                                 FontSize="16"
                                 FontFamily="Cascadia Mono"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource PrimaryTextColor}"
                                 Background="{DynamicResource PrimaryBackground}"
                                 Margin="0 0 10 0"
                                 KeyDown="OnKeyDownHandler"/>

                    </Grid>

                </Border>

                <!--Add Instructor Button-->
                <Button x:Name="btnAdd"
                        Style="{DynamicResource AddButton}"
                        Content="+ Add Client"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Click="btnAdd_Click"/>

            </Grid>
            
            <!--DataGridView-->
            <Grid Grid.Row="1"
                  Margin="0 0 17 0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.7*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>

                    <!--ID-->
                    <Border Grid.Column="0"
                            BorderThickness="1"
                            Background="{DynamicResource PrimaryIconColor}"
                            BorderBrush="{DynamicResource PrimaryTextBoxColor}">
                        <Label x:Name="lbId"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Content="ID"
                               FontFamily="Cascadia Mono"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <!--Name-->
                    <Border Grid.Column="1"
                            BorderThickness="1"
                            Background="{DynamicResource PrimaryIconColor}"
                            BorderBrush="{DynamicResource PrimaryTextBoxColor}">
                        <Label x:Name="lbName"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Content="Name"
                               FontFamily="Cascadia Mono"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <!--Surname-->
                    <Border Grid.Column="2"
                            BorderThickness="1"
                            Background="{DynamicResource PrimaryIconColor}"
                            BorderBrush="{DynamicResource PrimaryTextBoxColor}">
                        <Label x:Name="lbSurname"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Content="Surname"
                               FontFamily="Cascadia Mono"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <!--Date of Birth-->
                    <Border Grid.Column="3"
                            BorderThickness="1"
                            Background="{DynamicResource PrimaryIconColor}"
                            BorderBrush="{DynamicResource PrimaryTextBoxColor}">
                        <Label x:Name="lbDob"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Content="Date Of Birth"
                               FontFamily="Cascadia Mono"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <!--Gender-->
                    <Border Grid.Column="4"
                            BorderThickness="1"
                            Background="{DynamicResource PrimaryIconColor}"
                            BorderBrush="{DynamicResource PrimaryTextBoxColor}">
                        <Label x:Name="lbGender"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Content="Gender"
                               FontFamily="Cascadia Mono"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <!--PhoneNumber-->
                    <Border Grid.Column="5"
                            BorderThickness="1"
                            Background="{DynamicResource PrimaryIconColor}"
                            BorderBrush="{DynamicResource PrimaryTextBoxColor}">
                        <Label x:Name="lbPhoneNumber"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Content="Phone Number"
                               FontFamily="Cascadia Mono"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <!--PSN-->
                    <Border Grid.Column="6"
                            BorderThickness="1"
                            Background="{DynamicResource PrimaryIconColor}"
                            BorderBrush="{DynamicResource PrimaryTextBoxColor}">
                        <Label x:Name="lbPSN"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Content="PSN"
                               FontFamily="Cascadia Mono"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>

                    <Border Grid.Column="7"></Border>

                </Grid>

            </Grid>

            <ScrollViewer Grid.Row="2">
                <StackPanel x:Name="wrpClients">

                </StackPanel>
            </ScrollViewer>

        </Grid>

    </Border>
</Page>