<UserControl x:Class="Gym.Desktop.Components.Packages.PackageViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             Height="360" 
             Width="295"
             Margin="7">
    <Grid Background="Transparent"
          x:Name="grMain">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>            
        </Grid.RowDefinitions>

        <!--Picture of Package-->
        <Border Grid.Row="0">
            <Border.Background>
                <ImageBrush x:Name="ImgB"
                            Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <Border Grid.Row="1"
                Background="{DynamicResource PrimaryBackground}">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <!--Package Name-->
                <StackPanel Grid.Row="0" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Border>
                        <Path Grid.Column="0"
                              Fill="{DynamicResource PrimaryPackageIconColor}"
                              Data="{DynamicResource star-icon}"
                              Width="20" Height="20"/>
                    </Border>
                    <Label x:Name="lbPackageName"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           FontFamily="Cascadia Mono"
                           Foreground="{DynamicResource PrimaryTextColor}"/>
                </StackPanel>

                <!--Package Price and Total Days-->
                <StackPanel Grid.Row="1" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--Package Price-->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Border>
                                <Path Fill="{DynamicResource PrimaryPackageIconColor}"
                                      Data="{DynamicResource money-icon}"
                                      Width="20" Height="20"/>
                            </Border>
                            <Label x:Name="lbPackagePrice"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontFamily="Cascadia Mono"
                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                        </StackPanel>

                        <!--Empty Space-->
                        <StackPanel Grid.Column="1"></StackPanel>

                        <!--Total Days-->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Border>
                                <Path Fill="{DynamicResource PrimaryPackageIconColor}"
                                      Data="{DynamicResource days-icon}"
                                      Width="20" Height="20"/>
                            </Border>
                            <Label x:Name="lbPackageTotalDays"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontFamily="Cascadia Mono"
                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                        </StackPanel>

                    </Grid>

                </StackPanel>

                <!--Description-->
                <TextBlock x:Name="tbDescription"
                           FontSize="11"
                           Margin="0 5 0 0"
                           FontFamily="Cascadia Mono"
                           Grid.Row="2"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="{DynamicResource PrimaryTextColor}"/>
                
                <!--Update and Delete-->
                <Border Grid.Row="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--Delete-->
                        <Border Grid.Column="0"                            
                                MouseDown="deleteIcon_MouseDown"
                                Cursor="Hand"
                                Height="15" Width="15"
                                HorizontalAlignment="Left"
                                Background="{DynamicResource PrimaryBackground}">
                            <Path Data="{DynamicResource delete-icon}"
                                  Fill="{DynamicResource PrimaryIconColor}"
                                  Stretch="Uniform"/>
                        </Border>

                        <!--Update-->
                        <Border Grid.Column="1"
                                Cursor="Hand"
                                MouseDown="updateIcon_MouseDown"
                                Height="15" Width="15"
                                HorizontalAlignment="Right"
                                Background="{DynamicResource PrimaryBackground}">
                            <Path Data="{DynamicResource update-icon}"
                                  Fill="{DynamicResource PrimaryIconColor}"
                                  Stretch="Uniform"/>
                        </Border>

                    </Grid>
                </Border>

            </Grid>

        </Border>

    </Grid>

</UserControl>