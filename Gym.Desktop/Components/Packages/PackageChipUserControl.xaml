<UserControl x:Class="Gym.Desktop.Components.Packages.PackageChipUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gym.Desktop.Components.Packages"
             mc:Ignorable="d" 
             Height="30"
             Margin="5 0"
             Cursor="Hand"
             MouseDown="UserControl_MouseDown">
    <Border Background="{DynamicResource PrimaryBackground}"
            CornerRadius="15">
        <StackPanel Orientation="Horizontal">
            <Border>
                <Path Data="{DynamicResource circle-icon}"
                      Fill="{DynamicResource PrimaryIconColor}"
                      Height="8"
                      Width="8"
                      Stretch="Uniform"
                      Margin="10 0 5 0"/>
            </Border>
            <Label x:Name="lbPackage"
                   Foreground="{DynamicResource PrimaryTextColor}"
                   Content="Package"
                   FontFamily="Cascadia Mono"
                   FontSize="13"
                   Margin="0 0 10 0"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
