<UserControl x:Class="Gym.Desktop.Components.Packages.PackageViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gym.Desktop.Components.Packages"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="360" 
             Width="295"
             Margin="7">
    <Grid Background="Transparent"
          Cursor="Hand"
          x:Name="grMain"
          MouseDown="grMain_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Picture of Package-->
        <Border Grid.Row="0">
            <Border.Background>
                <ImageBrush x:Name="ImgB"
                            Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <Border Grid.Row="1"
                Background="{DynamicResource PrimaryBackground}">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Package Name-->
                <StackPanel Grid.Row="0" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Border>
                        <Path Grid.Column="0"
                              Fill="{DynamicResource PrimaryPackageIconColor}"
                              Data="{DynamicResource star-icon}"
                              Width="25" Height="25"/>
                    </Border>
                    <Label x:Name="lbPackageName"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           FontFamily="Cascadia Mono"
                           Foreground="{DynamicResource PrimaryTextColor}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!--Package Price-->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Border>
                                <Path Fill="{DynamicResource PrimaryPackageIconColor}"
                                      Data="{DynamicResource money-icon}"
                                      Width="23" Height="23"/>
                            </Border>
                            <Label x:Name="lbPackagePrice"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontFamily="Cascadia Mono"
                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                        </StackPanel>

                        <!--Empty Space-->
                        <StackPanel Grid.Column="1"></StackPanel>

                        <!--Total Days-->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Border>
                                <Path Fill="{DynamicResource PrimaryPackageIconColor}"
                                      Data="{DynamicResource days-icon}"
                                      Width="23" Height="23"/>
                            </Border>
                            <Label x:Name="lbPackageTotalDays"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontFamily="Cascadia Mono"
                                   Foreground="{DynamicResource PrimaryTextColor}"/>
                        </StackPanel>

                    </Grid>

                </StackPanel>

                <!--Description-->
                <TextBlock x:Name="tbDescription"
                           FontSize="13"
                           Margin="0 10 0 0"
                           FontFamily="Cascadia Mono"
                           Grid.Row="2"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="{DynamicResource PrimaryTextColor}"/>

            </Grid>

        </Border>

    </Grid>

</UserControl>